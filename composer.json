{
	"name": "contributte/translation",
	"description": "Symfony/Translation integration for Nette Framework.",
	"type": "library",
	"keywords": ["symfony", "nette", "translation"],
	"license": "MIT",
	"homepage": "https://github.com/contributte/translation",
	"authors": [
		{
			"name": "Ales Wita"
		}
	],
	"require": {
		"php": "^7.1",
		"latte/latte": "^2.5",
		"nette/application": "^3.0",
		"nette/di": "^3.0",
		"nette/finder": "^2.5",
		"nette/http": "^3.0",
		"nette/neon": "^3.0",
		"nette/schema": "^1.0",
		"nette/utils": "^3.0",
		"symfony/translation": "^4.2",
		"symfony/config": "^4.2"
	},
	"require-dev": {
		"nette/bootstrap": "^3.0",
		"nette/database": "^3.0",
		"nette/robot-loader": " ^3.0",
		"nette/tester": "^2.1",
		"doctrine/orm": "^2.6",
		"tracy/tracy": "^2.6",
		"mockery/mockery": "^1.2",
		"ninjify/qa": "^0.8.0",
		"ninjify/nunjuck": "^0.2.0"
	},
	"autoload": {
		"psr-4": {
			"Contributte\\Translation\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/Tests"
		}
	},
	"scripts": {
		"tests": [
			"tester tests/tests -s -j 1"
		],
		"qa": [
			"linter src tests",
			"codesniffer src tests"
		],
		"phpstan-install": [
			"mkdir -p temp/phpstan",
			"composer require -d temp/phpstan phpstan/phpstan:^0.11",
			"composer require -d temp/phpstan phpstan/phpstan-deprecation-rules:^0.11",
			"composer require -d temp/phpstan phpstan/phpstan-nette:^0.11",
			"composer require -d temp/phpstan phpstan/phpstan-strict-rules:^0.11"
		],
		"phpstan": [
			"temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
		],
		"coverage": [
			"tester -s -p phpdbg --coverage ./tests/coverage.xml --coverage-src ./src"
		]
	}
}
